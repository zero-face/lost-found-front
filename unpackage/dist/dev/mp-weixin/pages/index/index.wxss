.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #253598;
  color: #211d69;
  font-family: sans-serif;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-weight: 700;
  padding: 60rpx 20rpx 0rpx 20rpx;
  background: #55aaff;
  box-shadow: 2px 3px 10px rgba(0, 0, 0, 0.15);
  margin: 10rpx 0 10rpx 0;
}
._ul,
._li {
  list-style-type: none;
  padding: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 0;
}
u-icon {
  width: 31px;
  height: 20px;
  margin: 0px 5px;
  -webkit-transition: 0.45s ease-in-out all;
  transition: 0.45s ease-in-out all;
}
._li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  text-align: center;
  cursor: pointer;
  min-width: 200rpx;
  position: relative;
  text-decoration: none;
  color: #211d69;
}
._li:before {
  position: absolute;
  content: "";
  top: 60%;
  left: 46%;
  height: 6px;
  width: 6px;
  border-radius: 50%;
  background: #211d69;
  -webkit-transform: scale(0);
          transform: scale(0);
  -webkit-transform-origin: 50% 50%;
          transform-origin: 50% 50%;
  -webkit-transition: 0.45s ease-in-out all;
  transition: 0.45s ease-in-out all;
}
.nav text {
  -webkit-transition: 0.45s ease-in-out all;
  transition: 0.45s ease-in-out all;
  position: absolute;
  top: 11px;
}
.text-container,
.svg-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-mask-image: url("https://kasperdebruyne.be/img/mask2.svg");
  -webkit-mask-composite: source-out;
  -webkit-mask-position: 0px -14px;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: 100px 40px;
  position: relative;
  width: 100%;
  height: 20px;
  -webkit-transition: 0.45s ease-in-out all;
  transition: 0.45s ease-in-out all;
}
.text-container {
  -webkit-transition-delay: 0.1s;
          transition-delay: 0.1s;
}
.svg-container {
  -webkit-mask-size: 100px 60px;
  -webkit-mask-position: 0px 0px;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  /* Firefox  */
}
._li:hover .svg-container {
  -webkit-transform: translateY(-24px);
          transform: translateY(-24px);
  -webkit-mask-position: 0px -40px;
}
._li:hover:before {
  -webkit-transform: scale(1);
          transform: scale(1);
  -webkit-transition-delay: 0.15s;
          transition-delay: 0.15s;
}
._li:hover text {
  -webkit-transform: translateY(-10px);
          transform: translateY(-10px);
}
._li:hover .text-container {
  -webkit-transform: translateY(-34px);
          transform: translateY(-34px);
  -webkit-mask-position: 0px 0px;
}

