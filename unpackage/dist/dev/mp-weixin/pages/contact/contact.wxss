.send {
  background: #fff;
  position: fixed;
  right: 20rpx;
  bottom: 10rpx;
  left: 0rpx;
  width: 100%;
  height: 70rpx;
  z-index: 999;
  display: flex;
  padding: 20rpx 10rpx 10rpx 10rpx;
}
.send .input {
  width: 100%;
  min-height: 60rpx;
  background-color: #eee;
  border-radius: 50rpx;
  line-height: 70rpx;
  padding-left: 30rpx;
  height: 80rpx;
  max-height: 80rpx;
}
