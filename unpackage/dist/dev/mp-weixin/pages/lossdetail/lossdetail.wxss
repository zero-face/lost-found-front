.comments {
  padding-top: 10rpx;
}
.content {
  background-color: #F4F4F4;
}
.type-1 {
  display: flex;
}
.type-1 .image {
  margin: 3rpx 10rpx 10rpx 3rpx;
  border-radius: 60%;
  overflow: hidden;
  height: 70rpx;
  width: 70rpx;
  display: inline-block;
}
.type-1 .nacom {
  width: 580rpx;
}
.type-1 .nacom .name {
  display: inline-block;
  line-height: 50rpx;
  text-align: center;
  color: #838383;
}
.type-1 .nacom .comment {
  display: flex;
  height: auto;
  width: 100%;
  padding-left: 0rpx;
  color: #282828;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.type-1 .nacom .comment .reply {
  padding-left: 30rpx;
}
.type-2 {
  width: 100%;
  height: auto;
  display: flex;
  padding-left: 90rpx;
  margin-top: 20rpx;
}
.type-2 .image {
  margin: 3rpx 10rpx 10rpx 3rpx;
  border-radius: 60%;
  height: 70rpx;
  width: 70rpx;
  display: inline-block;
}
.type-2 .name {
  margin-right: 450rpx;
  width: 40rpx;
  display: inline-block;
  line-height: 50rpx;
  text-align: center;
  color: #838383;
}
.type-2 .comment {
  display: flex;
  padding-left: 0rpx;
  color: #282828;
  width: 90%;
  height: auto;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.type-2 .comment .reply {
  padding-left: 30rpx;
}
.cent {
  line-height: 50rpx;
}
.detail-title {
  font-size: 30rpx;
  font-weight: bold;
}
.detail {
  background-color: #FFFFFF;
  height: auto;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.check {
  border-top: 1rpx solid #eee;
  background: white;
  position: fixed;
  right: 15rpx;
  bottom: 0;
  left: 0rpx;
  width: 100%;
  height: 90rpx;
  z-index: 999;
  padding: 10rpx 10rpx 10rpx 10rpx;
}
.check .boleft {
  width: 77%;
  display: flex;
  flex-wrap: wrap;
  height: 70rpx;
  justify-content: space-between;
  float: left;
  line-height: 80rpx;
}
.check .boleft .item {
  text-align: center;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 50rpx;
}
.check .boleft .input {
  width: 100%;
  min-height: 60rpx;
  background-color: #eee;
  border-radius: 50rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  height: 70rpx;
  max-height: 70rpx;
}
.check .contact {
  background: #ffaa00;
  border-radius: 40rpx 0% 0% 40rpx;
  float: right;
  height: 70rpx;
  width: 25%;
  color: white;
  line-height: 70rpx;
  text-align: center;
}
.check .verify {
  color: white;
  line-height: 70rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 10rpx;
  width: 130rpx;
  background: #0055ff;
  float: right;
  height: 70rpx;
  width: 15%;
}

